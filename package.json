{
  "name": "universalis",
  "version": "1.0.0",
  "unicVersion": "0.1.0",
  "description": "A crowdsourced market board website for FFXIV.",
  "main": "build/universalis.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "start": "node .",
    "start-dev": "npm run lint && npm run build && npm start",
    "generate-docs": "node ./build/docs/doc-generator.js",
    "remove-duplicates": "node ./build/scripts/remove-duplicates.js",
    "test": "mocha --require ts-node/register \"test/**/*.{js,ts,tsx}\"",
    "test-github": "mocha --require ts-node/register test/utilTest.ts test/RemoteDataManagerTest.ts",
    "unic": "node build/cli/unic.js",
    "update": "git pull && npm install && npm run build",
    "deploy": "git pull && npm install && npm run build && pm2 restart universalis",
    "update-mogboard": "git pull && git submodule update && cd mogboard && git submodule update"
  },
  "author": "karashiiro",
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "@koa/router": "^8.0.1",
    "archiver": "^3.1.1",
    "beepbeep": "^1.3.0",
    "bent": "^7.3.6",
    "chalk": "^2.4.2",
    "cron": "^1.7.1",
    "csv-parse": "^4.4.6",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-queryparams": "^1.0.3",
    "koa-static": "^5.0.0",
    "mongodb": "^3.5.9",
    "remeda": "0.0.18",
    "sha.js": "^2.4.11",
    "typescript": "^3.5.3",
    "winston": "^3.2.1",
    "winston-mongodb": "^5.0.1"
  },
  "devDependencies": {
    "@types/archiver": "^3.0.0",
    "@types/bent": "^7.0.2",
    "@types/cron": "^1.7.1",
    "@types/koa": "^2.0.49",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-static": "^4.0.1",
    "@types/koa__cors": "^2.2.3",
    "@types/koa__router": "^8.0.0",
    "@types/lodash.clonedeep": "^4.5.6",
    "@types/lodash.isequal": "^4.5.5",
    "@types/mocha": "^5.2.7",
    "@types/mongodb": "^3.3.1",
    "@types/sha.js": "^2.4.0",
    "lodash.clonedeep": "^4.5.0",
    "lodash.isequal": "^4.5.0",
    "mocha": "^7.1.1",
    "prettier": "^2.0.4",
    "should": "^13.2.3",
    "ts-node": "8.4.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0"
  }
}
